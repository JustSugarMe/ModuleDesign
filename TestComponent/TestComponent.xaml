<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ComponentDesign="clr-namespace:ComponentDesign;assembly=ComponentDesign" 
    x:Class="TestComponent.TestComponent"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
	<Grid x:Name="LayoutRoot" Loaded="LayoutRoot_Loaded" Background="White">
		<ComponentDesign:TreeViewComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120">
			<ComponentDesign:TreeViewComboBox.Resources>
				<ResourceDictionary>
					<ResourceDictionary.MergedDictionaries>
						<ResourceDictionary Source="/ComponentDesign;component/Themes/Generic.xaml"/>
					</ResourceDictionary.MergedDictionaries>
				</ResourceDictionary>
			</ComponentDesign:TreeViewComboBox.Resources>
		</ComponentDesign:TreeViewComboBox>
	</Grid>
</UserControl>
